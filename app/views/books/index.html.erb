
<!--一覧画面-->

<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    
  </thead>
  
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', "/books/#{book.id}" %></td>
    <td><%= link_to 'Edit', "/books/edit" %></td>
    <td>Destroy</td>
  </tr>
  <% end %></tbody>



</table>

<!--投稿機能-->

<h2>New Book</h2>
<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>

<% end %>